{
  final ViewTreeObserver observer=view.getViewTreeObserver();
  observer.addOnDrawListener(new ViewTreeObserver.OnDrawListener(){
    public void onDraw(){
      if (animator.getDuration() == 0) {
        return;
      }
      animator.start();
      view.getViewTreeObserver().removeOnDrawListener(this);
    }
  }
);
}
