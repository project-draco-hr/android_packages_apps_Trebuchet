{
  List<AlphabeticalAppsList.AdapterItem> items=mApps.getAdapterItems();
  getCurScrollState(mScrollPosState,items);
  if (mScrollPosState.rowIndex != -1) {
    int predictionBarHeight=mApps.getPredictedApps().isEmpty() ? 0 : mPredictionBarHeight;
    return getPaddingTop() + (mScrollPosState.rowIndex * mScrollPosState.rowHeight) + predictionBarHeight - mScrollPosState.rowTopOffset;
  }
  return 0;
}
