{
  final int screenCount=getChildCount();
  for (int i=0; i < screenCount; i++) {
    CellLayout cl=(CellLayout)getChildAt(i);
switch (state) {
case TOP:
      if (!isDragHappening) {
        boolean showDropHighlight=i == mCurrentPage;
        cl.setAcceptsDrops(showDropHighlight);
        break;
      }
case BOTTOM_HIDDEN:
case BOTTOM_VISIBLE:
    if (!isDragHappening) {
      spanX=1;
      spanY=1;
    }
  cl.setAcceptsDrops(cl.findCellForSpan(null,spanX,spanY));
break;
default :
throw new RuntimeException("updateWhichPagesAcceptDropsHelper passed an unhandled ShrinkState");
}
}
}
