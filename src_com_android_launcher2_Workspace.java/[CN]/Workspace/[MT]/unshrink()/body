{
  if (mIsSmall) {
    Sequencer s=new Sequencer();
    final int screenCount=getChildCount();
    for (int i=0; i < screenCount; i++) {
      final CellLayout cl=(CellLayout)getChildAt(i);
      final int duration=getResources().getInteger(R.integer.config_workspaceUnshrinkTime);
      s.playTogether(new PropertyAnimator(duration,cl,"translationX",0.0f),new PropertyAnimator(duration,cl,"translationY",0.0f),new PropertyAnimator(duration,cl,"scaleX",1.0f),new PropertyAnimator(duration,cl,"scaleY",cl.getScaleY(),1.0f),new PropertyAnimator(duration,cl,"dimmedBitmapAlpha",0.0f));
    }
    s.addListener(mUnshrinkAnimationListener);
    s.start();
  }
}
