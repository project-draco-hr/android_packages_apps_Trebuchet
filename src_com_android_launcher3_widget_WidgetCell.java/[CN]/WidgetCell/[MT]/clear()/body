{
  if (DEBUG) {
    Log.d(TAG,"reset called on:" + mWidgetName.getText());
  }
  mWidgetImage.animate().cancel();
  mWidgetImage.setImageDrawable(null);
  mWidgetName.setText(null);
  mWidgetDims.setText(null);
  if (mActiveRequest != null) {
    mActiveRequest.cleanup();
    mActiveRequest=null;
  }
}
