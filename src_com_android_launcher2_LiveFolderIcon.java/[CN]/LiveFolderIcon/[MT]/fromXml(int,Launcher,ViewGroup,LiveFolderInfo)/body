{
  LiveFolderIcon icon=(LiveFolderIcon)LayoutInflater.from(launcher).inflate(resId,group,false);
  final Resources resources=launcher.getResources();
  Drawable d=folderInfo.icon;
  if (d == null) {
    d=Utilities.createIconThumbnail(resources.getDrawable(R.drawable.ic_launcher_folder),launcher,false);
    folderInfo.filtered=true;
  }
  icon.setCompoundDrawablesWithIntrinsicBounds(null,d,null,null);
  icon.setText(folderInfo.title);
  icon.setTag(folderInfo);
  icon.setOnClickListener(launcher);
  return icon;
}
