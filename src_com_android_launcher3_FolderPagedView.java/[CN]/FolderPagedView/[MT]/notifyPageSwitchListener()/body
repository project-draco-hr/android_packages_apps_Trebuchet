{
  super.notifyPageSwitchListener();
  if (mFolder != null) {
    mFolder.updateTextViewFocus();
  }
  if (mSortOperationPending && getNextPage() == 0) {
    post(new Runnable(){
      @Override public void run(){
        if (mSortOperationPending) {
          doSort();
        }
      }
    }
);
  }
}
