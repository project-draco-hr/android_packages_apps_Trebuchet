{
  final ContentResolver cr=context.getContentResolver();
  Cursor c=cr.query(Settings.Favorites.CONTENT_URI,new String[]{"title","intent"},"title=? and intent=?",new String[]{title,intent.toURI()},null);
  boolean result=false;
  try {
    result=c.moveToFirst();
  }
  finally {
    c.close();
  }
  return result;
}
