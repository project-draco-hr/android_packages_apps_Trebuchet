{
  boolean current=SettingsProvider.getBoolean(mContext,key,res);
  SettingsProvider.putBoolean(mContext,key,!current);
  SettingsProvider.putBoolean(mContext,SettingsProvider.SETTINGS_CHANGED,true);
  String state=current ? mLauncher.getResources().getString(R.string.icon_labels_show) : mLauncher.getResources().getString(R.string.icon_labels_hide);
  ((TextView)v.findViewById(R.id.item_state)).setText(state);
}
