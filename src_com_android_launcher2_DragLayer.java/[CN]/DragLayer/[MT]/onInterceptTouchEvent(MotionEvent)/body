{
  boolean result=false;
  if (ev.getAction() == MotionEvent.ACTION_DOWN) {
    mAllowed=BOTH;
  }
  if ((mAllowed & DRAG) != 0) {
    result=mDragController.onInterceptTouchEvent(ev);
    if (result) {
      mAllowed=DRAG;
    }
  }
  if ((mAllowed & SWIPE) != 0) {
    result=mSwipeController.onInterceptTouchEvent(ev);
    if (result) {
      mAllowed=SWIPE;
    }
  }
  return result;
}
