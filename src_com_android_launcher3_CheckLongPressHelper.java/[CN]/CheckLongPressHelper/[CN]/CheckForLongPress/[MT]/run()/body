{
  if ((mView.getParent() != null) && mView.hasWindowFocus() && !mHasPerformedLongPress) {
    boolean handled;
    if (mListener != null) {
      handled=mListener.onLongClick(mView);
    }
 else {
      handled=mView.performLongClick();
    }
    if (handled) {
      mView.setPressed(false);
      mHasPerformedLongPress=true;
    }
  }
}
