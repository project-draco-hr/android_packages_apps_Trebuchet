  initProgramFragment();
  initProgramStore();
  initGl();
  initData();
  mScript.bind_gIconIDs(mAllocIconIds);
  mScript.bind_gLabelIDs(mAllocLabelIds);
  sRS.contextBindRootScript(mScript);
}
