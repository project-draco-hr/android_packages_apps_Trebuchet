{
  if (!isVisible() || mLauncher.isWorkspaceLocked() || mLocks != 0) {
    return true;
  }
  if (sRollo.checkClickOK() && mCurrentIconIndex == mDownIconIndex && mCurrentIconIndex >= 0 && mCurrentIconIndex < mAllAppsList.size()) {
    ApplicationInfo app=mAllAppsList.get(mCurrentIconIndex);
    final Bitmap bmp=app.iconBitmap;
    int screenX=mMotionDownRawX - (bmp.getWidth() / 2);
    int screenY=mMotionDownRawY - bmp.getHeight();
    mDragController.startDrag(bmp,screenX,screenY,this,app,DragController.DRAG_ACTION_COPY);
    mLauncher.closeAllApps(true);
  }
  return true;
}
