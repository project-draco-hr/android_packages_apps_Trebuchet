{
  if (info != null && mDragAndDropEnabled) {
    final int itemType=((ItemInfo)info).itemType;
    mActive=(itemType == LauncherSettings.Favorites.ITEM_TYPE_APPLICATION);
    if (mActive) {
      setVisibility(VISIBLE);
    }
    if (mHandle != null) {
      mHandle.setVisibility(INVISIBLE);
    }
  }
}
