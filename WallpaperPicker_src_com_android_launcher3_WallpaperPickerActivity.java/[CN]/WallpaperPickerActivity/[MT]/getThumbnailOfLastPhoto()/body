{
  Cursor cursor=MediaStore.Images.Media.query(getContentResolver(),MediaStore.Images.Media.EXTERNAL_CONTENT_URI,new String[]{MediaStore.Images.ImageColumns._ID,MediaStore.Images.ImageColumns.DATE_TAKEN},null,null,MediaStore.Images.ImageColumns.DATE_TAKEN + " DESC LIMIT 1");
  Bitmap thumb=null;
  if (cursor != null) {
    if (cursor.moveToNext()) {
      int id=cursor.getInt(0);
      thumb=MediaStore.Images.Thumbnails.getThumbnail(getContentResolver(),id,MediaStore.Images.Thumbnails.MINI_KIND,null);
    }
    cursor.close();
  }
  return thumb;
}
