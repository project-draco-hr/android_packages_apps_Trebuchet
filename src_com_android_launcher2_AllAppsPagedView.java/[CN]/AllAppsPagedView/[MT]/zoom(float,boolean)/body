{
  mZoom=zoom;
  cancelLongPress();
  if (isVisible()) {
    if (animate) {
      startAnimation(AnimationUtils.loadAnimation(getContext(),R.anim.all_apps_2d_fade_in));
    }
 else {
      onAnimationEnd();
    }
  }
 else {
    if (animate) {
      startAnimation(AnimationUtils.loadAnimation(getContext(),R.anim.all_apps_2d_fade_out));
    }
 else {
      onAnimationEnd();
    }
  }
}
