{
  if (LOGD)   Log.d(LOG_TAG,"creating new launcher database");
  db.execSQL("CREATE TABLE favorites (" + "_id INTEGER PRIMARY KEY," + "title TEXT,"+ "intent TEXT,"+ "container INTEGER,"+ "screen INTEGER,"+ "cellX INTEGER,"+ "cellY INTEGER,"+ "spanX INTEGER,"+ "spanY INTEGER,"+ "itemType INTEGER,"+ "gadgetId INTEGER NOT NULL DEFAULT -1,"+ "isShortcut INTEGER,"+ "iconType INTEGER,"+ "iconPackage TEXT,"+ "iconResource TEXT,"+ "icon BLOB,"+ "uri TEXT,"+ "displayMode INTEGER"+ ");");
  if (mAppWidgetHost != null) {
    mAppWidgetHost.deleteHost();
  }
  if (!convertDatabase(db)) {
    loadFavorites(db,DEFAULT_FAVORITES_PATH);
  }
}
