{
  boolean send=true;
  if (mDirection > 0) {
    if (mAmount > (mDest - 0.01f)) {
      send=false;
    }
  }
 else {
    if (mAmount < (mDest + 0.01f)) {
      send=false;
    }
  }
  if (send) {
    mHandler.sendEmptyMessageDelayed(1,FRAME_DELAY);
  }
 else {
    mListener.onFinishSwipe((int)(mAmount >= 0 ? (mAmount + 0.5f) : (mAmount - 0.5f)));
  }
}
