{
  mMinDest=mode - 1;
  if (mMinDest < MODE_WORKSPACE) {
    mMinDest=MODE_WORKSPACE;
  }
  mMaxDest=mode + 1;
  if (mMaxDest > MODE_ALL_APPS) {
    mMaxDest=MODE_ALL_APPS;
  }
  mCanceled=true;
  if (mAllAppsView != null) {
    if (animate) {
      mAllAppsView.setZoomTarget(mode);
    }
 else {
      mAllAppsView.setZoom(mode);
    }
  }
  mMode=mode;
}
