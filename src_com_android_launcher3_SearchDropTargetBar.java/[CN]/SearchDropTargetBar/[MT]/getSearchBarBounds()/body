{
  if (mQSBSearchBar != null) {
    final int[] pos=new int[2];
    mQSBSearchBar.getLocationOnScreen(pos);
    final Rect rect=new Rect();
    rect.left=pos[0];
    rect.top=pos[1];
    rect.right=pos[0] + mQSBSearchBar.getWidth();
    rect.bottom=pos[1] + mQSBSearchBar.getHeight();
    return rect;
  }
 else {
    return null;
  }
}
