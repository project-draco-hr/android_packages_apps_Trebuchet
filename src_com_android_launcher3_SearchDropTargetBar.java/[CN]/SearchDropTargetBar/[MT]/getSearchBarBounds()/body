{
  if (mQSB != null) {
    final int[] pos=new int[2];
    mQSB.getLocationOnScreen(pos);
    final Rect rect=new Rect();
    rect.left=pos[0];
    rect.top=pos[1];
    rect.right=pos[0] + mQSB.getWidth();
    rect.bottom=pos[1] + mQSB.getHeight();
    return rect;
  }
 else {
    return null;
  }
}
