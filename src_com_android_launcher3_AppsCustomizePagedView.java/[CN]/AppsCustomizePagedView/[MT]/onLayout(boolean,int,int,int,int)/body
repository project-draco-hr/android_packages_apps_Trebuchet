{
  super.onLayout(changed,l,t,r,b);
  if (!isDataReady()) {
    if (!mWidgets.isEmpty()) {
      post(new Runnable(){
        public void run(){
          if (Utilities.isViewAttachedToWindow(AppsCustomizePagedView.this)) {
            setDataIsReady();
            onDataReady(getMeasuredWidth(),getMeasuredHeight());
          }
        }
      }
);
    }
  }
}
