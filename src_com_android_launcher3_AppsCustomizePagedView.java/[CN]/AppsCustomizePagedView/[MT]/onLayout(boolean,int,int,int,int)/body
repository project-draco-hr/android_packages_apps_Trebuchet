{
  super.onLayout(changed,l,t,r,b);
  if (!isDataReady()) {
    if ((LauncherAppState.isDisableAllApps() || !mApps.isEmpty()) && !mWidgets.isEmpty()) {
      post(new Runnable(){
        public void run(){
          if (isAttachedToWindow()) {
            setDataIsReady();
            onDataReady(getMeasuredWidth(),getMeasuredHeight());
          }
        }
      }
);
    }
  }
}
