{
  if (direction != mDirection) {
    if (!mRunning) {
      mBase=baseTime;
      mRunning=true;
      mCallback.onTweenStarted();
      long next=SystemClock.uptimeMillis() + FRAME_TIME;
      mHandler.postAtTime(mTick,next);
    }
 else {
      long now=SystemClock.uptimeMillis();
      long diff=now - mBase;
      mBase=now + diff - mDuration;
    }
    mDirection=direction;
  }
}
