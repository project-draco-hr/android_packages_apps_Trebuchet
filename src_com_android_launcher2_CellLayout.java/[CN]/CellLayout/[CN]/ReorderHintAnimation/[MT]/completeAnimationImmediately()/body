{
  if (a != null) {
    a.cancel();
  }
  AnimatorSet s=LauncherAnimUtils.createAnimatorSet();
  a=s;
  s.playTogether(LauncherAnimUtils.ofFloat(child,"scaleX",1f),LauncherAnimUtils.ofFloat(child,"scaleY",1f),LauncherAnimUtils.ofFloat(child,"translationX",0f),LauncherAnimUtils.ofFloat(child,"translationY",0f));
  s.setDuration(REORDER_ANIMATION_DURATION);
  s.setInterpolator(new android.view.animation.DecelerateInterpolator(1.5f));
  s.start();
}
