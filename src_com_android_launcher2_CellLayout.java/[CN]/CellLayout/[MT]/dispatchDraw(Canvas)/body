{
  if (mBackgroundAlpha > 0.0f) {
    Drawable bg;
    if (mHover && getScaleX() < 0.5f) {
      bg=mBackgroundMiniHover;
    }
 else     if (getScaleX() < 0.5f) {
      bg=mBackgroundMini;
    }
 else {
      bg=mBackground;
    }
    if (bg != null) {
      bg.setAlpha((int)(mBackgroundAlpha * 255));
      bg.draw(canvas);
    }
  }
  super.dispatchDraw(canvas);
}
