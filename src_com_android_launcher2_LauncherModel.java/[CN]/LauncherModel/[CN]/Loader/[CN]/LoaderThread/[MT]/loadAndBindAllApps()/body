{
  boolean loaded;
synchronized (this) {
    loaded=mAllAppsLoaded;
    mAllAppsLoaded=true;
  }
  if (DEBUG_LOADERS)   Log.d(TAG,"loadAndBindAllApps loaded=" + loaded);
  if (!loaded) {
    loadAllAppsByBatch();
    if (mStopped) {
      mAllAppsLoaded=false;
      return;
    }
  }
 else {
    onlyBindAllApps();
  }
}
