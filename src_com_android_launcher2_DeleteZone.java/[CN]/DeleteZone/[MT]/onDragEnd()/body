{
  if (mActive && mDragAndDropEnabled) {
    mActive=false;
    mDragController.setDeleteRegion(null);
    if (mOutAnimation != null)     startAnimation(mOutAnimation);
    if (mHandleInAnimation != null && mHandle != null) {
      mHandle.startAnimation(mHandleInAnimation);
    }
    setVisibility(GONE);
  }
}
