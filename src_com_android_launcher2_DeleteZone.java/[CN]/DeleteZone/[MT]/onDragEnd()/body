{
  if (mTrashMode) {
    mTrashMode=false;
    mDragController.setDeleteRegion(null);
    if (mOutAnimation != null)     startAnimation(mOutAnimation);
    if (mHandleInAnimation != null)     mHandle.startAnimation(mHandleInAnimation);
    if (mManageVisibility) {
      setVisibility(GONE);
    }
  }
}
