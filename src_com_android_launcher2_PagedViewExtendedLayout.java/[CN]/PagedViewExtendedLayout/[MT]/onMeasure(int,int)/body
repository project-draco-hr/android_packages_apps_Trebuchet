{
  if (LauncherApplication.isScreenXLarge()) {
    super.onMeasure(widthMeasureSpec,heightMeasureSpec);
  }
 else {
    int widthSpecSize=Math.max(getSuggestedMinimumWidth(),MeasureSpec.getSize(widthMeasureSpec));
    int widthSpecMode=MeasureSpec.AT_MOST;
    super.onMeasure(MeasureSpec.makeMeasureSpec(widthSpecSize,widthSpecMode),heightMeasureSpec);
  }
}
