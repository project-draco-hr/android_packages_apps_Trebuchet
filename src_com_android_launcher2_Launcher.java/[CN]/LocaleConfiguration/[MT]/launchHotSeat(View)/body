{
  if (mState == State.APPS_CUSTOMIZE)   return;
  int index=-1;
  if (v.getId() == R.id.hotseat_left) {
    index=0;
  }
 else   if (v.getId() == R.id.hotseat_right) {
    index=1;
  }
  loadHotseats();
  if (index >= 0 && index < mHotseats.length && mHotseats[index] != null) {
    startActivitySafely(mHotseats[index],"hotseat");
  }
}
