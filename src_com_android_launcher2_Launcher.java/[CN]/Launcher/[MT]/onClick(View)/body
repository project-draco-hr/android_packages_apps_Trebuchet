{
  Object tag=v.getTag();
  if (tag instanceof ApplicationInfo) {
    final Intent intent=((ApplicationInfo)tag).intent;
    startActivitySafely(intent);
  }
 else   if (tag instanceof FolderInfo) {
    handleFolderClick((FolderInfo)tag);
  }
 else   if (v == mHandleView) {
    if (isAllAppsVisible()) {
      closeAllApps(true);
    }
 else {
      showAllApps(true);
    }
  }
}
