{
switch (mMode) {
case MODE_WORKSPACE:
    if (amount == -1) {
      mWorkspace.clearChildrenCache();
      mMode=MODE_ALL_APPS;
      mSwipeController.setRange(0,1);
    }
  break;
case MODE_ALL_APPS:
if (amount == 1) {
  mWorkspace.clearChildrenCache();
  mMode=MODE_WORKSPACE;
  mSwipeController.setRange(-1,0);
}
break;
case MODE_ALL_APPS_ZOOMED:
break;
}
}
