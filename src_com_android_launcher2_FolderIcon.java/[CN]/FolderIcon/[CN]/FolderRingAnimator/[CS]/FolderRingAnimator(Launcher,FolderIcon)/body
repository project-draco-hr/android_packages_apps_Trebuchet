{
  mLauncher=launcher;
  mFolderIcon=folderIcon;
  mOuterRingDrawable=launcher.getResources().getDrawable(R.drawable.portal_ring_outer_holo);
  mInnerRingDrawable=launcher.getResources().getDrawable(R.drawable.portal_ring_inner_holo);
  if (sSharedOuterRingDrawable == null) {
    sSharedOuterRingDrawable=launcher.getResources().getDrawable(R.drawable.portal_ring_outer_holo);
  }
  if (sSharedInnerRingDrawable == null) {
    sSharedInnerRingDrawable=launcher.getResources().getDrawable(R.drawable.portal_ring_inner_holo);
  }
}
