{
  if (DEBUG_LOADERS) {
    Log.d(TAG,"loadAndBindAllApps mAllAppsLoaded=" + mAllAppsLoaded);
  }
  if (!mAllAppsLoaded) {
    loadAllApps();
synchronized (LoaderTask.this) {
      if (mStopped) {
        return;
      }
    }
    updateAllAppsIconsCache();
synchronized (LoaderTask.this) {
      if (mStopped) {
        return;
      }
      mAllAppsLoaded=true;
    }
  }
 else {
    onlyBindAllApps();
  }
}
