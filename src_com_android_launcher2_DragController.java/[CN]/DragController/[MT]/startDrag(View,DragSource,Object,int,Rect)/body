{
  mOriginator=v;
  Bitmap b=getViewBitmap(v);
  if (b == null) {
    return;
  }
  int[] loc=mCoordinatesTemp;
  v.getLocationOnScreen(loc);
  int screenX=loc[0];
  int screenY=loc[1];
  startDrag(b,screenX,screenY,source,dragInfo,dragAction,dragRegion);
  b.recycle();
  if (dragAction == DRAG_ACTION_MOVE) {
    v.setVisibility(View.GONE);
  }
}
