{
  final PagedViewWidgetImageView image=(PagedViewWidgetImageView)findViewById(R.id.widget_preview);
  if (preview != null) {
    image.mAllowRequestLayout=false;
    image.setImageDrawable(preview);
    if (mIsAppWidget) {
      int[] imageSize=getPreviewSize();
      int centerAmount=(imageSize[0] - preview.getIntrinsicWidth()) / 2;
      image.setPadding(image.getPaddingLeft() + centerAmount,image.getPaddingTop(),image.getPaddingRight(),image.getPaddingBottom());
    }
    image.setAlpha(1f);
    image.mAllowRequestLayout=true;
  }
}
