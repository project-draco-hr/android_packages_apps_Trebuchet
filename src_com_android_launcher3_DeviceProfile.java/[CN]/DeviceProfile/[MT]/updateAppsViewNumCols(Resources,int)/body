{
  int appsViewLeftMarginPx=res.getDimensionPixelSize(R.dimen.apps_grid_view_start_margin);
  int availableAppsWidthPx=(containerWidth > 0) ? containerWidth : availableWidthPx;
  int numCols=(availableAppsWidthPx - appsViewLeftMarginPx) / (allAppsCellWidthPx + 2 * allAppsCellPaddingPx);
  if (numCols != appsViewNumCols) {
    appsViewNumCols=numCols;
    return true;
  }
  return false;
}
