{
  if (context == null) {
    throw new IllegalArgumentException("'context' cannot be null!");
  }
  try {
    PackageInfo pi=context.getPackageManager().getPackageInfo(STATS_PACKAGE,0);
    boolean isSystemApp=(pi.applicationInfo.flags & (ApplicationInfo.FLAG_SYSTEM | ApplicationInfo.FLAG_UPDATED_SYSTEM_APP)) != 0;
    return pi.applicationInfo.enabled && isSystemApp;
  }
 catch (  PackageManager.NameNotFoundException e) {
    Log.e(TAG,"stats not found!");
    return false;
  }
}
