{
  ArrayList<Object> widgets=new ArrayList<Object>();
  int cellWidth=((mWidgetSpacingLayout.getContentWidth() - mPageLayoutPaddingLeft - mPageLayoutPaddingRight- ((mWidgetCountX - 1) * mWidgetWidthGap)) / mWidgetCountX);
  int cellHeight=((mWidgetSpacingLayout.getContentHeight() - mPageLayoutPaddingTop - mPageLayoutPaddingBottom- ((mWidgetCountY - 1) * mWidgetHeightGap)) / mWidgetCountY);
  int numWidgetsPerPage=mWidgetCountX * mWidgetCountY;
  int offset=page * numWidgetsPerPage;
  for (int i=offset; i < Math.min(offset + numWidgetsPerPage,mWidgets.size()); ++i) {
    widgets.add(mWidgets.get(i));
  }
  prepareLoadWidgetPreviewsTask(page,widgets,cellWidth,cellHeight);
}
