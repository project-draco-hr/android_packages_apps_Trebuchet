{
  cancelLongPress();
  mRollo.mState.read();
  mRollo.clearSelectedIcon();
  if (amount > 0.001f) {
    mRollo.mState.visible=1;
    mRollo.mState.zoom=(int)(SCALE_SCALE * amount);
  }
 else {
    mRollo.mState.visible=0;
    mRollo.mState.zoom=0;
  }
  if (amount > 0.001f && amount < 0.999f) {
    mLocks|=LOCK_ZOOMING;
  }
 else {
    mLocks&=~LOCK_ZOOMING;
  }
  mRollo.mState.save();
}
