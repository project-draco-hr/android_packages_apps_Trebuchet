{
  if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.JELLY_BEAN_MR1) {
    return (Settings.Global.getInt(context.getContentResolver(),Settings.Global.DEVELOPMENT_SETTINGS_ENABLED,0) == 1) && (info instanceof AppInfo || info instanceof PendingAddItemInfo);
  }
 else {
    return (Settings.Secure.getInt(context.getContentResolver(),Settings.Secure.DEVELOPMENT_SETTINGS_ENABLED,0) == 1) && (info instanceof AppInfo || info instanceof PendingAddItemInfo);
  }
}
