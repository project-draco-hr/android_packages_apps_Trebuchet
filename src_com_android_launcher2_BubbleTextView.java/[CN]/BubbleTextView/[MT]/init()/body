{
  mBackground=getBackground();
  setFocusable(true);
  setBackgroundDrawable(null);
  final Resources res=getContext().getResources();
  int bubbleColor=res.getColor(R.color.bubble_dark_background);
  mPaint=new Paint(Paint.ANTI_ALIAS_FLAG);
  mPaint.setColor(bubbleColor);
  mBubbleColorAlpha=Color.alpha(bubbleColor) / 255.0f;
  mFocusedOutlineColor=getResources().getColor(R.color.workspace_item_focused_outline_color);
  mFocusedGlowColor=getResources().getColor(R.color.workspace_item_focused_glow_color);
  mPressedOutlineColor=getResources().getColor(R.color.workspace_item_pressed_outline_color);
  mPressedGlowColor=getResources().getColor(R.color.workspace_item_pressed_glow_color);
}
