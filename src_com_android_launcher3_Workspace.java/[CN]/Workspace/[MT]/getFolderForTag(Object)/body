{
  final Folder[] value=new Folder[1];
  mapOverItems(MAP_NO_RECURSE,new ItemOperator(){
    @Override public boolean evaluate(    ItemInfo info,    View v,    View parent){
      if (v instanceof Folder) {
        Folder f=(Folder)v;
        if (f.getInfo() == tag && f.getInfo().opened) {
          value[0]=f;
          return true;
        }
      }
      return false;
    }
  }
);
  return value[0];
}
