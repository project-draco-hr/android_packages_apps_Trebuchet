{
  final View[] value=new View[1];
  mapOverItems(MAP_NO_RECURSE,new ItemOperator(){
    @Override public boolean evaluate(    ItemInfo info,    View v,    View parent){
      if (v.getTag() == tag) {
        value[0]=v;
        return true;
      }
      return false;
    }
  }
);
  return value[0];
}
