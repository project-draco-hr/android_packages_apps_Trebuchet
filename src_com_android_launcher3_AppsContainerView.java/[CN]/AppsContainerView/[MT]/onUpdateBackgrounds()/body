{
  int inset=mFixedBounds.isEmpty() ? mContainerInset : mFixedBoundsContainerInset;
  boolean hasSearchBar=(mSearchBarEditView != null) && (mSearchBarEditView.getVisibility() == View.VISIBLE);
  mAppsRecyclerView.setBackground(new InsetDrawable(getContext().getResources().getDrawable(hasSearchBar ? R.drawable.apps_list_search_bg : R.drawable.apps_list_bg),inset,0,inset,0));
  getRevealView().setBackground(new InsetDrawable(getContext().getResources().getDrawable(R.drawable.apps_reveal_bg),inset,0,inset,0));
}
