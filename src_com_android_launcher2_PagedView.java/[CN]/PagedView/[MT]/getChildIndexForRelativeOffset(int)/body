{
  final int childCount=getChildCount();
  int left=getRelativeChildOffset(0);
  for (int i=0; i < childCount; ++i) {
    final int right=(left + getChildAt(i).getMeasuredWidth());
    if (left <= relativeOffset && relativeOffset <= right) {
      return i;
    }
    left=right;
  }
  return -1;
}
